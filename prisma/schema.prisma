generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  leagueMemberships LeagueMembership[]
  picks             Pick[]
  createdLeagues    League[]           @relation("LeagueCreator")
}

model League {
  id          String   @id @default(cuid())
  name        String
  code        String   @unique
  teamId      String   @default("DET") // Hardcoded to Red Wings for now
  createdById String
  maxMembers  Int?
  seasonYear  Int      @default(2024)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  memberships LeagueMembership[]
  picks       Pick[]
  creator     User               @relation("LeagueCreator", fields: [createdById], references: [id])

  @@index([code])
  @@index([createdById])
}

model LeagueMembership {
  id          String   @id @default(cuid())
  leagueId    String
  userId      String
  role        String   @default("member") // admin or member
  totalPoints Int      @default(0)
  joinedAt    DateTime @default(now())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  league League @relation(fields: [leagueId], references: [id], onDelete: Cascade)
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([leagueId, userId])
  @@index([leagueId])
  @@index([userId])
}

model Game {
  id        String   @id @default(cuid())
  homeTeam  String   @default("Detroit Red Wings")
  awayTeam  String
  gameDate  DateTime
  opponent  String
  isHome    Boolean  @default(true)
  status    String   @default("scheduled") // scheduled, in_progress, final
  homeScore Int?
  awayScore Int?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  picks              Pick[]
  playerPerformances PlayerPerformance[]

  @@index([gameDate])
  @@index([status])
}

model Player {
  id        String   @id @default(cuid())
  name      String
  number    Int?
  position  String // Forward, Defense, Goalie
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  picks        Pick[]
  performances PlayerPerformance[]

  @@unique([name, number])
  @@index([isActive])
}

model Pick {
  id           String    @id @default(cuid())
  userId       String
  leagueId     String
  gameId       String
  playerId     String
  playerName   String
  pointsEarned Int       @default(0)
  pickedAt     DateTime  @default(now())
  lockedAt     DateTime?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  // Relations
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  league League @relation(fields: [leagueId], references: [id], onDelete: Cascade)
  game   Game   @relation(fields: [gameId], references: [id], onDelete: Cascade)
  player Player @relation(fields: [playerId], references: [id])

  @@unique([userId, leagueId, gameId])
  @@index([leagueId, gameId])
  @@index([userId])
  @@index([gameId])
}

model PlayerPerformance {
  id                String   @id @default(cuid())
  playerId          String
  gameId            String
  goals             Int      @default(0)
  assists           Int      @default(0)
  points            Int      @default(0) // denormalized: goals + assists
  plusMinus         Int?
  shots             Int?
  hits              Int?
  blockedShots      Int?
  powerPlayPoints   Int?
  shortHandedPoints Int?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  // Relations
  player Player @relation(fields: [playerId], references: [id])
  game   Game   @relation(fields: [gameId], references: [id])

  @@unique([playerId, gameId])
  @@index([gameId])
  @@index([playerId])
}
